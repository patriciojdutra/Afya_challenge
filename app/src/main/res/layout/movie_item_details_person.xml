<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/movie_item_size_height">

    <ImageView
        android:id="@+id/movie_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black_transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitleMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_movie_marge_top"
            android:layout_marginBottom="@dimen/title_movie_marge_bottom"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/title_movie_size_text" />
    </LinearLayout>
</FrameLayout>